@page
@model CitasMedicas.App.Web.Pages.Index1Model
@{
}

<h1>Listado de Pacientes</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Telefono</th>
            <th colspan=3 scope="col">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var paciente in Model.pacientes)
        {
            <tr>
                <td>@paciente.Nombre</td>
                 
                <td>@paciente.Apellidos</td> 
                <td>@paciente.NumeroTelefono</td>
                <td><a class="btn btn-secondary" asp-page="./PacienteDetalles" asp-route-id="@paciente.Id">Detalle</a></td>
                <td><a class="btn btn-secondary" asp-page="./EditPaciente" asp-route-id="@paciente.Id">Editar</a></td>
                <td><a class="btn btn-secondary" asp-page="./DeletePaciente" asp-route-id="@paciente.Id">Eliminar</a></td>
                
            </tr>
        }
    </tbody>


</table>


