@page
@model CitasMedicas.App.Web.Pages.Pacientes.PacienteDetallesModel
@{
}


<h1>Detalle de Pacientes</h1>

<table class="table table-striped">
        <tr>
            <th scope="col">Nombre</th>
            <td>@Model.paciente.Nombre</td>
        </tr>
        <tr>
            <th scope="col">Apellidos</th>
            <td>@Model.paciente.Apellidos</td> 
        </tr>
        <tr>
            <th scope="col">Genero</th>
            <td>@Model.paciente.Genero</td>
        </tr>
        <tr>
            <th scope="col">Fecha de nacimiento</th>
            <td>@Model.paciente.FechaNacimiento</td>
        </tr>
        <tr>
            <th scope="col">Medico</th>
            @if (Model.paciente.Medico==null)
            {
                <th>
                    <a class="btn btn-secondary" asp-page="./AddMedico" asp-route-id="@Model.paciente.Id">Asignar Medico</a>
                </th>
            }
            else
            {
                <td>@Model.paciente.Medico.Nombre @Model.paciente.Medico.Apellidos @Model.paciente.Medico.Especializacion  </td>
            }
        
        </tr>

</table>

<a class="btn btn-secondary" asp-page="./Index1">Volver</a>