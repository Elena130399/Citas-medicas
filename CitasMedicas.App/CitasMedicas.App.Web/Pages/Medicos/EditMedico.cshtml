@page
@using CitasMedicas.App.Dominio
@model CitasMedicas.App.Web.Pages.Medicos.EditMedicoModel
@{
}

<h1>Editar Medico</h1>
<form method="POST">

    <div class="form-group">
        <label asp-for="medico.Id"></label>
        <input asp-for="medico.Id" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="medico.Nombre"></label>
        <input asp-for="medico.Nombre" class="form-control">
    </div>
<div class="form-group">
        <label asp-for="medico.Apellidos"></label>
        <input asp-for="medico.Apellidos" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="medico.NumDoc"></label>
        <input asp-for="medico.NumDoc" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="medico.NumeroTelefono"></label>
        <input asp-for="medico.NumeroTelefono" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="medico.Direccion"></label>
        <input asp-for="medico.Direccion" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="medico.Correo"></label>
        <input asp-for="medico.Correo" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="medico.FechaNacimiento"></label>
        <input asp-for="medico.FechaNacimiento" class="form-control" type="date" value="2000-01-01">
    </div>
    <div class="form-group">
        <label asp-for="medico.Genero"></label>
        <select asp-items="Html.GetEnumSelectList<Genero>()" class="form-control"></select>
    </div>



    <div class="form-group">
        <label asp-for="medico.Codigo" ></label>
        <input asp-for="medico.Codigo" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="medico.Especializacion" ></label>
        <select asp-items="Html.GetEnumSelectList<Especializacion>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="medico.TipoMedico" ></label>
        <input asp-for="medico.TipoMedico" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="medico.RegistroMedico" ></label>
        <input asp-for="medico.RegistroMedico" class="form-control">
    </div>


 <button type="submit" class="btn btn-primary" >Guardar</button>

</form>

<a class="btn btn-secondary" asp-page="./IndexMedicos" >Volver</a>
