@page
@model CitasMedicas.App.Web.Pages.IndexMedicosModel
@{
}
<h1>Listado de Medicos</h1>

<a class="btn btn-primary" asp-page="./CreateMedico">Crear Medico</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Telefono</th>
            <th colspan=3 scope="col">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var medico in Model.medicos)
        {
            <tr>
                <td>@medico.Nombre</td>
                 
                <td>@medico.Apellidos</td> 
                <td>@medico.NumeroTelefono</td>
                <td><a class="btn btn-secondary" asp-page="./MedicoDetalles" asp-route-id="@medico.Id">Detalle</a></td>
                <td><a class="btn btn-secondary" asp-page="./EditMedico" asp-route-id="@medico.Id">Editar</a></td>
                <td><a class="btn btn-secondary" asp-page="./DeleteMedico" asp-route-id="@medico.Id">Eliminar</a></td>
                
            </tr>
        }
    </tbody>


</table>