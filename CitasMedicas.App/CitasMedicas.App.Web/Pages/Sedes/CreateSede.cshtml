@page
@using CitasMedicas.App.Dominio
@model CitasMedicas.App.Web.Pages.Sedes.CreateSedeModel
@{
}

<h1>Crear Sede</h1>
<form method="POST">

    <div class="form-group">
        <label asp-for="sede.NombreSede"></label>
        <input asp-for="sede.NombreSede" class="form-control">
    </div>
    <div class="form-group">
        <label for="idCiudad">Ciudad</label>
        <select name="sede.Ciudad" id="sede.Ciudad" class="form-control">
            @foreach (var ciudad in Model.ciudades)
            {
                <option value ="@ciudad.Id">@ciudad.NombreCiudad</option>
            }
        </select>
    </div>

<!-- FG -->
    <button type="submit" class="btn btn-primary" >Crear Sede</button>

</form>
    <a class="btn btn-secondary" asp-page="./IndexSedes" >Volver</a>
