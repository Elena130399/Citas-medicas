@page
@model CitasMedicas.App.Web.Pages.IndexSedesModel
@{
}
<h1>Listado de Sedes</h1>

<a class="btn btn-primary" asp-page="./CreateSede">Crear Sede</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Ciudad</th>
            <th colspan=2 scope="col">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var sede in Model.sedes)
        {
            <tr>
                <td>@sede.NombreSede</td>

                @if (sede.Ciudad==null)
                {
                    <th>
                        <a class="btn btn-secondary" asp-page="./AddCiudad" asp-route-id="@sede.Id">Asignar Ciudad</a>
                    </th>
                }
                else
                {
                    <td>@sede.Ciudad.NombreCiudad</td>
                }

                
                <td><a class="btn btn-secondary" asp-page="./EditSede" asp-route-id="@sede.Id">Editar</a></td>
                <td><a class="btn btn-secondary" asp-page="./DeleteSede" asp-route-id="@sede.Id">Eliminar</a></td>
                
            </tr>
        }
    </tbody>


</table>